            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='company_id']" position="after">
